<header ...attributes>
  {{#if (has-block "action")}}
    <AuToolbar>
      <AuHeading>
        {{yield to="title"}}
      </AuHeading>
      {{yield to="action"}}
    </AuToolbar>
  {{else if (has-block "alert")}}
    <AuToolbar>
      <AuHeading class="au-u-margin-right">
        {{yield to="title"}}
      </AuHeading>
      {{yield to="alert"}}
    </AuToolbar>
  {{else}}
    <AuHeading>
      {{yield to="title"}}
    </AuHeading>
  {{/if}}
  {{#if (has-block "subtitle")}}
    <AuHeading @level="2" @skin="3" class="au-u-margin-top-tiny">
      {{yield to="subtitle"}}
    </AuHeading>
  {{/if}}

</header>