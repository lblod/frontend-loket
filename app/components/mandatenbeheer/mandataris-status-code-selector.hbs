<PowerSelect
        @loadingMessage = 'Aan het laden...'
        @noMatchesMessage = 'Geen resultaten'
        @searchMessage = 'Typ om te zoeken'
        @searchEnabled={{true}}
        @allowClear={{@allowClear}}
        @disabled={{@disabled}}
        @placeholder="Titelvoerend, effectief, waarnemend, verhinderd"
        @options={{this.statusCodeList}}
        @selected={{this.selectedStatusCode}}
        @searchField="label"
        @onChange={{this.select}}
        as |status|>
  {{status.label}}
</PowerSelect>
