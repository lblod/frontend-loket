<PowerSelect
  @selected={{@selectedPeriod}}
  @options={{this._options}}
  class="is-optional"
  @onChange={{this.selectPeriod}}
  @searchEnabled={{false}}
  as |period|>
  Bestuursperiode {{moment-format period.startDate 'YYYY'}}
  -
  {{#if period.endDate}}
    {{moment-format period.endDate 'YYYY'}}
  {{else}}
    heden
  {{/if}}
</PowerSelect>
