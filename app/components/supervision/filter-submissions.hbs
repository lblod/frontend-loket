<div>
  <div class="au-o-grid au-u-1-1 au-o-grid--tiny">

    {{!-- Bestuursorgaan Filter --}}
    <div class="au-o-grid__item au-u-1-1 au-u-1-2@xsmall au-u-1-4@medium">
      <Supervision::SubmissionGoverningBodiesSelect
        @governingBodyIds={{this.filter.governingBodyIds}}
        @onChange={{this.handleGoverningBodyFilterChange}}
      />
    </div>

    {{!-- Besluit Types Filter --}}
    <div class="au-o-grid__item au-u-1-1 au-u-1-2@xsmall au-u-1-4@medium">
      <Supervision::SubmissionTypesSelect
        @besluitTypeIds={{this.filter.besluitTypeIds}}
        @onChange={{this.handleBesluitTypeFilterChange}}
      />
    </div>

    {{!-- Status Filter --}}
    <div class="au-o-grid__item au-u-1-6@medium">
      <Supervision::SubmissionStatusSelect
        @statusUri={{this.filter.status}}
        @onChange={{this.handleStatusFilterChange}}
      />
    </div>

    {{!-- Gewijzigd Datum Filter --}}
    <div class="au-o-grid__item au-u-1-1 au-u-1-4@medium">
      <Supervision::SubmissionModifiedDateRange
        @modifiedDateFrom={{this.filter.modifiedDateFrom}}
        @modifiedDateTo={{this.filter.modifiedDateTo}}
        @onChange={{this.handleModifiedDateRangeFilterChange}}
      />
    </div>
  </div>
</div>
<div class="au-u-padding-top-small">
  <AuButton {{on "click" this.resetFilters}} @skin="link">
    <AuIcon @icon="cross" @alignment="left" /> Herstel alle filters
  </AuButton>
</div>