{{! the role="menu" is added by the AuDropdown component, so we can ignore the rule here.}}
{{! template-lint-disable require-context-role}}
<AuDropdown
  @alignment="left"
  @title="Menu modules"
  @buttonLabel="Account settings"
>
  {{#if this.currentSession.canAccessToezicht}}
    <AuLink @route="supervision.submissions" @icon="search-folder" role="menuitem">
      Toezicht
    </AuLink>
  {{/if}}
  {{#if this.currentSession.canAccessBerichten}}
    <AuLink @route="berichtencentrum.berichten" @icon="message" role="menuitem">
      Berichtencentrum
    </AuLink>
  {{/if}}
  {{#if this.currentSession.canAccessBbcdr}}
    <AuLink @route="bbcdr.rapporten" @icon="document" role="menuitem">
      BBC DR
    </AuLink>
  {{/if}}
  {{#if this.currentSession.canAccessMandaat}}
    <AuLink @route="mandatenbeheer.mandatarissen" @icon="user-fill" role="menuitem">
      Mandatenbeheer
    </AuLink>
  {{/if}}
  {{#if this.currentSession.canAccessWorshipMinisterManagement}}
    <AuLink @route="worship-ministers-management" @icon="user" role="menuitem">
      Bedienarenbeheer
    </AuLink>
  {{/if}}
  {{#if this.currentSession.canAccessLeidinggevenden}}
    <AuLink @route="leidinggevendenbeheer.bestuursfuncties" @icon="user-popup" role="menuitem">
      Leidinggevendenbeheer
    </AuLink>
  {{/if}}
  {{#if this.currentSession.canAccessPersoneelsbeheer}}
    <AuLink @route="personeelsbeheer.personeelsaantallen.index" @icon="users" role="menuitem">
      Personeelsbeheer
    </AuLink>
  {{/if}}
  {{#if this.currentSession.canAccessMandaatExternal}}
    <AuLinkExternal
      @icon="link-external"
      @iconAlignment="left"
      href={{(mandatenbeheer-url)}}
      role="menuitem"
    >
      Mandatenbeheer
    </AuLinkExternal>
  {{/if}}
  {{#if this.currentSession.canAccessSubsidies}}
    <AuLinkExternal
      @icon="link-external"
      @iconAlignment="left"
      href={{(subsidies-url)}}
      role="menuitem"
    >
      SubsidiePunt
    </AuLinkExternal>
  {{/if}}
  {{#if this.currentSession.canAccessEredienstMandatenbeheer}}
    <AuLink @route="eredienst-mandatenbeheer.mandatarissen" @icon="users-four-of-four" role="menuitem">
      Mandatenbeheer
    </AuLink>
  {{/if}}
  {{#if this.currentSession.canAccessPublicServices}}
    <AuLinkExternal
      @icon="link-external"
      @iconAlignment="left"
      href={{(lpdc-url)}}
      role="menuitem"
    >
      Producten- en dienstencatalogus
    </AuLinkExternal>
  {{/if}}
  {{#if this.currentSession.canAccessWorshipDecisionsDb}}
    <AuLinkExternal
      @icon="link-external"
      @iconAlignment="left"
      href={{(worship-decisions-database-url)}}
      role="menuitem"
    >
      Databank Erediensten
    </AuLinkExternal>
  {{/if}}
  {{#if this.currentSession.canAccessWorshipOrganisationsDb}}
    <AuLinkExternal
      @icon="link-external"
      @iconAlignment="left"
      href={{(worship-organisations-database-url)}}
      role="menuitem"
    >
      Organisaties Erediensten
    </AuLinkExternal>
  {{/if}}
  {{#if this.currentSession.canAccessVerenigingen}}
    <AuLinkExternal
      @icon="link-external"
      @iconAlignment="left"
      href={{(verenigingen-url)}}
      role="menuitem"
    >
      Verenigingen
    </AuLinkExternal>
  {{/if}}
  {{#if this.currentSession.canAccessContact}}
    <AuLinkExternal
      @icon="link-external"
      @iconAlignment="left"
      href={{(contact-url)}}
      role="menuitem"
    >
      Contact- en Organisatiegegevens
    </AuLinkExternal>
  {{/if}}
  {{#if this.currentSession.canAccessOpenProcesHuis}}
    <AuLinkExternal
      @icon="link-external"
      @iconAlignment="left"
      href={{(open-proces-huis-url)}}
      role="menuitem"
    >
      Open Proces Huis
    </AuLinkExternal>
  {{/if}}
</AuDropdown>