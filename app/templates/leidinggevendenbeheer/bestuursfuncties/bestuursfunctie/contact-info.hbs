<div class="col--1-1--s container-flex--contain">
  <div class="u-padding--trl--small">
    <div class="grid">
      <div class="col--9-12">
        <h2 class="h3">Bewerk algemene contactgegevens {{bestuursfunctie.rol.label}} {{bestuurseenheid.naam}}</h2>
      </div>
      <div class="col--3-12 u-align--right">
        <div {{action "cancel"}} class="link--icon--close">
          <span class="u-visually-hidden">Venster sluiten</span>
        </div>
      </div>
    </div>
  </div>
  <div class="container-flex--scroll u-padding--trl--small">
    <div class="form u-spacer--bottom--large">
      <div class="form__row u-spacer">
        <div class="grid u-spacer--small">
          <div class="col--4-12 col--6-12--m col--8-12--s col--1-1--xs">
            <label class="form__label" for="mailadres">Mailadres</label>
            {{input class="input-field input-field--block js-dynamic-label__field" name="bestuursfunctie-email" placeholder="mail@adres.be" inputmode="email" value=(mut model.email)}}
          </div>
        </div>
        <div class="grid">
          <div class="col--4-12 col--6-12--m col--8-12--s col--1-1--xs">
            <label class="form__label" for="telefoonnummer">Telefoonnummer</label>
            {{input class="input-field input-field--block js-dynamic-label__field" name="bestuursfunctie-telephone" placeholder="+32484738324" inputmode="tel" type="tel" value=(mut model.telephone)}}
          </div>
        </div>

      </div>
      <h4 class="h5 u-spacer--tiny">Adres</h4>
      <div class="form__row">
        <div class="grid">
          <div class="col--5-12 col--6-12--m col--8-12--s col--12-12--xs">
            {{adressenregister-selector adres=model.adres onSelect=(action "addressSelected") allowClear=true}}
          </div>
        </div>
      </div>


