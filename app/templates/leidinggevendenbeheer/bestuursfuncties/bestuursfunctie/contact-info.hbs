{{!-- Modal confirmation dialog --}}
{{#if showConfirmationDialog}}
  {{leidinggevendenbeheer/functionaris-close-confirmation
    cancel=(action (mut showConfirmationDialog false))
    save=(action "save")
    reset=(action "resetChanges")
  }}
{{/if}}
