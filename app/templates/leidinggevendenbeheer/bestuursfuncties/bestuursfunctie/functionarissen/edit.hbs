<AuToolbar @border="bottom" @size="large" as |Group|>
  <Group>
    <AuHeading @skin="2">Bewerk aanstellingsperiode voor {{this.model.isBestuurlijkeAliasVan.gebruikteVoornaam}} {{this.model.isBestuurlijkeAliasVan.achternaam}} als {{this.model.bekleedt.rol.label}}</AuHeading>
  </Group>
</AuToolbar>

<Leidinggevendenbeheer::FunctionarisForm @model={{this.model}} as |isValid| >
  <div class="au-o-box">
    <AuAlert @icon="info-circle">
      <AuContent @skin="small">
        <p>Hou de <strong>historiek</strong> van afgelopen aanstellingsperiodes bij.</p>
        <ul>
          <li>Nieuwe aanstellingsperiode of status: <AuLink @route="leidinggevendenbeheer.bestuursfuncties.bestuursfunctie.functionarissen">voeg een nieuwe aanstellingsperiode toe</AuLink>.</li>
          <li>Aanstellingsperiode verwijderen: <a href="mailto:LoketLokaalBestuur@vlaanderen.be?subject=Leidinggevendenbeheer - Loket Lokaal Bestuur" class="au-c-link">neem contact op met ons</a>.</li>
        </ul>
      </AuContent>
    </AuAlert>
  </div>

  <AuToolbar @border="top" @size="large" as |Group|>
    <Group>
      <AuButtonGroup>
        <AuButton
          @disabled={{not isValid}}
          @loading={{this.save.isRunning}}
          {{on "click" (perform this.save)}}
        >
          Corrigeer aanstellingsperiode
        </AuButton>
        <AuButton {{on "click" (perform this.resetChanges)}} @skin="secondary">
          Annuleer
        </AuButton>
      </AuButtonGroup>
    </Group>
  </AuToolbar>
</Leidinggevendenbeheer::FunctionarisForm>