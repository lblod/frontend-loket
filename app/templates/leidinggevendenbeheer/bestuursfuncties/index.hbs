{{page-title "Leidinggevendenbeheer" " " this.bestuurseenheid.classificatie.label " " this.bestuurseenheid.naam}}

<AuToolbar @border="bottom" @size="large" as |Group|>
  <Group>
    <AuHeading @skin="2">Leidinggevendenbeheer{{if this.allowed " â€” Overzicht functies"}}</AuHeading>
  </Group>
</AuToolbar>

<div class="au-c-body-container au-c-body-container--scroll">
  {{#if (or (not this.allowed) (eq this.model.length 0))}}
    <div class="au-o-box">
      <AuAlert @icon="info-circle" @size="small">
        <p>Voor de bestuurseenheid {{this.bestuurseenheid.classificatie.label}} {{this.bestuurseenheid.naam}} moeten er geen leidinggevende functies bijgehouden worden.</p>
      </AuAlert>
    </div>
  {{else}}
    {{#each this.model as |bestuursfunctie|}}
      <Leidinggevendenbeheer::BestuursfunctieCard
        @model={{bestuursfunctie}}
        @onClick={{(fn this.displayBestuursfunctie bestuursfunctie)}}
      />
    {{/each}}
  {{/if}}
</div>
