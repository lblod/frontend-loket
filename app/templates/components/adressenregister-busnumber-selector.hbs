<PowerSelect
        @allowClear={{allowClear}}
        @disabled={{disabled}}
        @placeholder={{placeholder}}
        @selected={{address}}
        @options={{options}}
        @class="is-optional"
        @onChange={{onChange}}
        @searchEnabled={{true}}
        @loadingMessage="Aan het laden..."
        @noMatchesMessage="Geen resultaten"
        as |address|>
  {{#if address.busnumber}}
    Bus {{address.busnumber}}
  {{else}}
    Geen busnummer
  {{/if}}
</PowerSelect>
