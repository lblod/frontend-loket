{{page-title "Subsidiebeheer"}}

<AuToolbar @border="bottom" @size="large" @nowrap="{{true}}" as |Group|>
  <Group class="au-u-1-2@medium">
    <div>
      <AuHeading @skin="2">Beschikbare subsidiemaatregelen</AuHeading>
      <p>
        Kies een van de subsidiemaatregelen om een nieuwe aanvraag te starten. Bekijk <a
              href="https://lokaalbestuur.vlaanderen.be/loket-lokaal-bestuur-module-subsidies" target="_blank"
              rel="noopener noreferrer">inhoudelijke informatie over de subsidies</a> die je hier kan aanvragen.
      </p>
    </div>
  </Group>
  <Group>
    <LinkTo @route="subsidy.applications" class="au-c-button au-c-button--secondary" type="button">
      <AuIcon @icon="arrow-left" @alignment="left"/>
      Terug naar lopende subsidiedossiers
    </LinkTo>
  </Group>
</AuToolbar>
<div class="au-c-data-table">
  <div class="au-c-data-table__wrapper">
    <table class="au-c-data-table__table">
      <thead>
      <tr>
        <th>
          <span class="au-c-data-table__header-title au-c-data-table__header-title--sortable">
          Subsidiemaatregel
            <button class="au-c-data-table__sort" type="button">
            <AuIcon @icon="nav-up-down" @alignment="right"/>
            </button>
        </span>
        </th>
        <th>
          <span class="au-c-data-table__header-title au-c-data-table__header-title--sortable">
          Periode
            <button class="au-c-data-table__sort" type="button">
            <AuIcon @icon="nav-up-down" @alignment="right"/>
            </button>
          </span>
        </th>
        <th>
          <span class="au-c-data-table__header-title au-c-data-table__header-title--sortable">
          Informatie subsidiemaatregel
            <button class="au-c-data-table__sort" type="button">
            <AuIcon @icon="nav-up-down" @alignment="right"/>
            </button>
          </span>
        </th>
        <th>
          <span class="au-c-data-table__header-title au-c-data-table__header-title--sortable">
            Aanvragen tot
            <button class="au-c-data-table__sort" type="button">
            <AuIcon @icon="nav-up-down" @alignment="right"/>
            </button>
          </span>
        </th>
        <th>
          <span class="au-c-data-table__header-title au-c-data-table__header-title--sortable"></span>
        </th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <td class="au-u-text-center" colspan="8">
          <AuLoader @padding="small"/>
        </td>
      </tr>
      </tbody>
    </table>
  </div>
</div>